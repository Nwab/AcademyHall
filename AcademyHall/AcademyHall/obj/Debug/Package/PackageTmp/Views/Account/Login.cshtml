@using AcademyHall.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_UnauthenticatedLayout.cshtml";
}

@*<h2>@ViewBag.Title.</h2>*@
<div class="col-lg-7 col-lg-offset-3  col-md-7 col-md-offset-3 col-sm-7 col-sm-offset-3 alert alert-info">
    <div class="col-lg-4">
        <img src="~/Img/admin.png" class="img-responsive" />
    </div>
    <div class="col-lg-8">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h2 class="">Login</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", required = "required", placeholder = "Username / Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", required = "required", placeholder = "Your Password" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <div class="col-lg-12">
                    <div class="col-md-pull-1 col-lg-3">
                        <input type="submit" value="LOG IN" class="btn btn-lg btn-success" />
                    </div>
                    <div class="col-lg-8">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <p>
                            @Html.ActionLink("Register as a new user", "Register")
                            <br />
                            <a href="#">Forgot Password ?</a>
                        </p>
                        
                    </div>
                </div>
               
            </div>


            @* Enable this once you have account confirmation enabled for password reset functionality
                <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                </p>*@
        }




    </div>

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
